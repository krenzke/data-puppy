<div class="flex items-center justify-center w-full h-screen">
  <div class="p-4 border rounded w-80">
    <h1 class="mb-4 font-semibold text-center">Select A Project</h1>
    <% @projects.each do |project| %>
      <%= link_to project.name, project_root_path(project_id: project.slug), class: 'px-4 py-2 border border-sky-600 rounded text-sky-600 block hover:bg-sky-600 hover:text-white text-lg my-4' %>
    <% end %>
  </div>
</div>